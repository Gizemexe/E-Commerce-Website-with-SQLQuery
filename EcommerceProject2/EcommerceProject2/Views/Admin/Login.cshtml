@model EcommerceProject2.Models.Admin
@{
    ViewBag.Title = "Login";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        Body {
            font-family: Calibri, Helvetica, sans-serif;
            background-color: #687078;
        }


        form {
            border: 3px solid black;
        }

        input[type=text], input[type=password] {
            width: 100%;
            margin: 8px 0;
            padding: 12px 20px;
            display: inline-block;
            border: 2px solid black;
            box-sizing: border-box;
        }

        button:hover {
            opacity: 0.7;
        }

        .but {
            color: white;
            background-color: #616566;
            padding-left: 25px;
            padding-right: 25px;
        }

        .tbl {
            margin-left: 25px;
            padding-right: 25px;
        }

        .container {
            padding: 25px;
            background-color: white;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
      
        <form>
            <div style="margin-bottom:190px" margin>
                <h1 style="margin-left:135px; font-size:50px"> Admin Login </h1>

                <table class="tbl">
                    <tr>
                        <th style="width:42%">
                            <label style="font-size:16px;"><b>Admin Username : </b></label>
                        </th>
                        @*<input type="text" placeholder="Enter Username" name="username" required>*@

                        <td>
                            @Html.TextBoxFor(x => x.Admin_name, new { @class = "form", @placeholder = "Admin Username" })
                        </td>
                        <td>
                            &nbsp;&nbsp;
                            @Html.ValidationMessageFor(x => x.Admin_name, "", new { @style = "color:red" })
                        </td>
                        <br />
                    </tr>
                    <tr>
                        <th>
                            <label style="font-size:16px;"><b>Password : </b></label>
                        </th>
                        @*<input type="password" placeholder="Enter Password" name="password" required>*@
                        <td>
                            @Html.PasswordFor(x => x.Admin_pssw, new { @class = "form", @placeholder = "Password" })
                        </td>

                        <td>
                            &nbsp;&nbsp;
                            @Html.ValidationMessageFor(x => x.Admin_pssw, "", new { @style = "color:red" })
                        </td>
                        <br />
                    </tr>
                    <tr>
                        <td></td>
                        <td style="text-align:right;">
                            <a href="#"> Forgot password? </a>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <br />
                            <input type="submit" value="Login" class="btn btn-success; but" /> &nbsp;&nbsp;
                            <input type="checkbox" checked="checked"> Remember me
                        </td>
                    </tr>


                    <tr>

                        <td>
                            <br />
                            <p style="color:red">@ViewBag.error</p>

                        </td>
                    </tr>
                </table>

            </div>

        </form>
    }
</body>
</html>

@section Scripts{
    @Scripts.Render("~/bundles/jquery")
}


